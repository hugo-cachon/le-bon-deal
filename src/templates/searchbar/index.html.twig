{% extends 'base.html.twig' %}

{% block title %}Hello SearchbarController!{% endblock %}



{% block body %}
    <form class="container" method="GET" action="{{path('app_searchbar')}}">
        <div class="input-group mb-3">
            <input type="text" name="offer" class="form-control" placeholder="search" aria-label="" aria-describedby="basic-addon1">
            <div class="input-group-prepend">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </div>
    </form>

<div class="container text-center mt-5">
    <div class="row ">
    {% for offer in offers %}
        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
                <img src="https://images.unsplash.com/photo-1665761125867-2847a4e2600e?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxfDB8MXxyYW5kb218MHx8fHx8fHx8MTY2NjcwNTI5OA&ixlib=rb-1.2.1&q=80&w=1080" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ offer.title }}</h5>
                    <p class="card-text">Some </p>
                    {# {% for price in offer.price %} #}
                    <p class="card-text"> {{ offer.price ?? "pas là" }}€</p>
                    {# {% endfor %} #}
                    <a href="{{ path("app_singleProduct",{idOffer:offer.id}) }}" class="btn btn-primary">See details</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
