{% extends 'users.html.twig' %}

{% block title %}Edit of the offer{% endblock %}

{% block body %}

    <div class="grix xs4 md3 lg4 container">
        <div class="col-xs4">
            <h1>Edit of the offer of {{ app.user.firstname }} {{ app.user.lastname }}</h1>
        </div>

        {{ form_start(form) }}
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}

        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}

        {{ form_label(form.city) }}
        {{ form_widget(form.city) }}

        {{ form_label(form.price) }}
        {{ form_widget(form.price) }}

        {{ form_label(form.tag) }}
        {{ form_widget(form.tag) }}


        {{ form_rest(form) }}
        <button type="submit">Enregistrer</button>
        {{ form_end(form) }}



    </div>
{% endblock %}
